<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ALPHA</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ALPHA", "Default", "Default", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Convert.ToInt32((Session["rol"].ToString())) == 1)
                    {
                        <li>@Html.ActionLink("Consultar Radicados", "Review", "Review")</li>
                        <li>@Html.ActionLink("Radicar Documentación", "Manager", "Manager")</li>
                        <li>@Html.ActionLink("Administrar Roles", "Index", "tblRoles")</li>
                        <li>@Html.ActionLink("Administrar Personas", "Index", "tblPersons")</li>
                        <li>@Html.ActionLink("Administrar Usuario", "Index", "Logins")</li>
                    }
                    @if (Convert.ToInt32((Session["rol"].ToString())) == 2)
                    {
                        <li>@Html.ActionLink("Consultar Radicados", "Review", "Review")</li>
                        <li>@Html.ActionLink("Radicar Documentación", "Manager", "Manager")</li>
                    }
                    @if (Convert.ToInt32((Session["rol"].ToString())) == 3)
                    {
                        <li>@Html.ActionLink("Consultar Radicados", "Review", "Review")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ALPHA</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

